<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_choose_level_background"
    android:padding="10dp"
    tools:context=".SecondActivity">

    <ImageButton
        android:id="@+id/easyButton"
        android:layout_width="107dp"
        android:layout_height="52dp"
        android:layout_gravity="center_vertical|bottom"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="60dp"
        android:layout_weight="1"
        android:background="@drawable/ic_easy_level_button"
        android:contentDescription="TODO"
        android:padding="15dp" />

    <ImageButton
        android:id="@+id/mediumButton"
        android:layout_width="107dp"
        android:layout_height="52dp"
        android:layout_gravity="center_vertical|bottom"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="60dp"
        android:layout_weight="1"
        android:background="@drawable/ic_medium_level_button"
        android:contentDescription="TODO"
        android:padding="15dp" />

    <ImageButton
        android:id="@+id/hardButton"
        android:layout_width="107dp"
        android:layout_height="52dp"
        android:layout_gravity="center_vertical|bottom"
        android:layout_weight="1"
        android:layout_marginBottom="60dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/ic_hard_level_button"
        android:contentDescription="TODO"
        android:padding="15dp" />

</LinearLayout>