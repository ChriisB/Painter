<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_levels_background"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Result">

    <TextView
        android:id="@+id/end_game_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/architects_daughter"
        android:text="GAME OVER"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/player_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Score: 50"
        android:fontFamily="@font/architects_daughter"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/high_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Score : 100"
        android:fontFamily="@font/architects_daughter"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back_to_level_choose_button"
            android:layout_width="250dp"
            android:layout_height="52dp"
            android:background="@drawable/ic_sample1_obszar_roboczy_1"
            android:fontFamily="@font/architects_daughter"
            android:onClick="tryAgain"
            android:text="Try Again"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/try_again_button"
            android:layout_width="250dp"
            android:layout_height="52dp"
            android:background="@drawable/ic_sample1_obszar_roboczy_1"
            android:fontFamily="@font/architects_daughter"
            android:text="Back"
            android:onClick="backToChooseLevelActivity"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>