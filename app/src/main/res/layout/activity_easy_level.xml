<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_levels_background"
    tools:context=".EasyLevelActivity">

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <Button
            android:id="@+id/sample1"
            android:layout_width="180dp"
            android:layout_height="52dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/ic_sample1_obszar_roboczy_1"
            android:fontFamily="@font/architects_daughter"
            android:text="@string/cyan"
            android:textAllCaps="false"
            android:textColor="@color/red"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sample2"
            android:layout_width="180dp"
            android:layout_height="52dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="80dp"
            android:background="@drawable/ic_sample1_obszar_roboczy_1"
            android:fontFamily="@font/architects_daughter"
            android:text="@string/red"
            android:textAllCaps="false"
            android:textColor="@color/grey"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sample3"
            android:layout_width="180dp"
            android:layout_height="52dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/ic_sample1_obszar_roboczy_1"
            android:fontFamily="@font/architects_daughter"
            android:text="@string/grey"
            android:textAllCaps="false"
            android:textColor="@color/cyan"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="37dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="top|right"
            android:layout_margin="15dp"
            android:layout_marginEnd="19dp"
            android:onClick="backButton1"
            app:srcCompat="@android:drawable/ic_menu_revert"
            tools:ignore="OnClick" />

        <TextView
            android:id="@+id/points"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/back_button"
            android:layout_alignParentStart="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="-7dp"
            android:ems="10"
            android:fontFamily="@font/architects_daughter"
            android:text=" 0 .pkt"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/main_sample"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/architects_daughter"
            android:gravity="center"
            android:text="@string/red"
            android:textColor="@color/red"
            android:textSize="60sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/architects_daughter"
            android:gravity="top|center"
            android:text="Time"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/tick_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="103dp"
            android:background="@mipmap/back_tick" />

        <Button
            android:id="@+id/tick_correct"
            android:layout_width="80dp"
            android:layout_height="82dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="75dp"
            android:background="@mipmap/tick_yes"
            android:visibility="invisible" />

        <Button
            android:id="@+id/tick_wrong"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="94dp"
            android:background="@mipmap/tick_no"
            android:visibility="invisible" />

    </RelativeLayout>

</FrameLayout>