<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_levels_background"
    tools:context=".EasyLevelActivity">

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <!--<ImageButton
            android:id="@+id/sampleFirst"
            android:layout_width="180dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/ic_sample1_obszar_roboczy_1" />
        -->

        <Button
            android:id="@+id/sampleFirst"
            android:layout_width="180dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="100dp"
            android:textAllCaps="false"
            android:text="@string/green"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="@font/architects_daughter"
            android:textColor="@color/colorRed"
            android:background="@drawable/ic_sample1_obszar_roboczy_1"
            />

        <Button
            android:id="@+id/sampleSecond"
            android:layout_width="180dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="205dp"
            android:layout_marginBottom="100dp"
            android:textAllCaps="false"
            android:text="@string/red"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="@font/architects_daughter"
            android:textColor="@color/colorGrey"
            android:background="@drawable/ic_sample1_obszar_roboczy_1" />

        <Button
            android:id="@+id/sampleThird"
            android:layout_width="180dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="400dp"
            android:layout_marginBottom="100dp"
            android:textAllCaps="false"
            android:text="@string/grey"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="@font/architects_daughter"
            android:textColor="@color/colorGreen"
            android:background="@drawable/ic_sample1_obszar_roboczy_1" />

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="37dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="top|right"
            android:layout_margin="15dp"
            android:layout_marginEnd="19dp"
            android:onClick="backButton2"
            app:srcCompat="@android:drawable/ic_menu_revert" />

        <EditText
            android:id="@+id/timer"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="40dp"
            android:ems="10"
            android:gravity="center|top"
            android:inputType="time" />

        <EditText
            android:id="@+id/points"
            android:layout_width="71dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/back_button"
            android:layout_alignParentStart="true"
            android:layout_marginStart="264dp"
            android:layout_marginTop="-5dp"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/mainSample"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="197dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/architects_daughter"
            android:gravity="center"
            android:text="@string/red"
            android:textColor="@color/colorRed"
            android:textSize="60sp"
            android:textStyle="bold" />



    </RelativeLayout>

</FrameLayout>