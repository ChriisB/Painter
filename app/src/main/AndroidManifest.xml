<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="application.chris.painter">

    <application>
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".FirstActivity"
            android:noHistory="true"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LevelChooseActivity"
            android:noHistory="true"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_second"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".EasyLevelActivity"
            android:noHistory="true"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_easy_level"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".MediumLevelActivity"
            android:noHistory="true"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_medium_level"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".HardLevelActivity"
            android:noHistory="true"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_hard_level"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme" />

        <activity android:name=".Result"
            android:noHistory="true"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_result"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>